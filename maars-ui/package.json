{
  "name": "electron-react-ts-app",
  "version": "1.0.0",
  "description": "Electron React TypeScript Application",
  "main": "src/main/index.ts",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "webpack serve --port 3000",
    "start:electron": "wait-on http://localhost:3000 && ts-node src/main/index.ts",
    "build": "webpack --config webpack.config.js && tsc -p tsconfig.electron.json",
    "package": "npm run build && electron-builder build --mac --win --linux --x64 --ia32",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.example.electron-react-ts-app",
    "productName": "Electron React TypeScript App",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^35.0.2",
    "electron-is-dev": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4"
  }
}
