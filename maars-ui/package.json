{
  "name": "maars-ui",
  "version": "0.0.1",
  "description": "",
  "main": "src/main/index.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "webpack serve --port 3000",
    "start:electron": "wait-on http://localhost:3000 && ts-node src/main/index.ts",
    "build": "webpack --config webpack.config.js && tsc src/main/index.ts --outDir dist/main",
    "package": "electron-builder build --mac --win --linux --x64 --ia32",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.example.electron-react-ts-app",
    "productName": "Electron React TypeScript App",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron-builder": "^25.1.8",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "wait-on": "^8.0.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
