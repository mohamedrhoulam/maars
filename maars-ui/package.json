{
  "name": "electron-react-ts-app",
  "version": "1.0.0",
  "description": "Electron React TypeScript Application",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "webpack serve --port 3000",
    "start:electron": "wait-on http://localhost:3000 && npx tsc -p tsconfig.electron.json && electron dist/main/index.js",
    "build": "webpack --config webpack.config.js && npx tsc -p tsconfig.electron.json",
    "package": "npm run build && electron-builder build --mac --win --linux --x64 --ia32",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.example.electron-react-ts-app",
    "productName": "Electron React TypeScript App",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  },
  "type": "module",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron": "^35.0.2",
    "electron-is-dev": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2",
    "wait-on": "^8.0.3",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  }
}
